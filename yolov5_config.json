{
    "name": "YOLOv5",
    "n_gpu": 1,

    "arch": {
        "type": "YOLOv5m",
        "args": {
            "first_out": 48,
            "nc": 90,
            "stride": [8, 16, 32],
            "anchors": [
                [[10, 13], [16, 30], [33, 23]],
                [[30, 61], [62, 45], [59, 119]],
                [[116, 90], [156, 198], [373, 326]]
            ]
        }
    },
    "data_loader": {
        "type": "COCODataLoader",
        "args":{
            "data_dir": "data/COCO_dataset",
            "batch_size": 2,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 2,
            "anchors": [
                [[10, 13], [16, 30], [33, 23]],
                [[30, 61], [62, 45], [59, 119]],
                [[116, 90], [156, 198], [373, 326]]
            ],
            "image_size": 640,
            "stride": [8, 16, 32],
            "nc": 90
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 5e-4,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "YOLOLoss",
        "args": {
            "anchors": [
                [[10, 13], [16, 30], [33, 23]],
                [[30, 61], [62, 45], [59, 119]],
                [[116, 90], [156, 198], [373, 326]]
            ],
            "stride": [8, 16, 32],
            "image_size": 640
        }
    },
    "metrics": [
        "accuracy", "top_k_acc"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
